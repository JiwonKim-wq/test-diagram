{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@diagram/common": ["./packages/common/src"],
      "@diagram/utils": ["./packages/utils/src"],
      "@diagram/api-client": ["./packages/api-client/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", ".next"]
} 